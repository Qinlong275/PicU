<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_album">
    <Button
        android:id="@+id/myshowback"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:background="@drawable/btn_close"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:text="查看PicU"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignTop="@+id/myshowback"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/myshowphoto"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_pic"/>
        <ImageView
            android:id="@+id/myshowwatermark"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/btn_watermark_voice"
            android:layout_above="@+id/myshowLayout3"
            android:layout_alignRight="@+id/myshowphoto"
            android:layout_alignEnd="@+id/myshowphoto">
        </ImageView>
        <Button
            android:id="@+id/myshowplay"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/btn_playing_audio"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignTop="@+id/myshowwatermark"
            android:layout_alignLeft="@+id/myshowphoto"
            android:layout_alignStart="@+id/myshowphoto" />
        <RelativeLayout
            android:id="@+id/myshowLayout3"
            android:layout_width="300sp"
            android:layout_height="70sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/myshowphoto">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/bg_hint">
                <TextView
                    android:id="@+id/myshowtip"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="50sp"
                    android:text="啊哦，Ta没有留下提示哦"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:gravity="left|center"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="300sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/myshowLayout3"
            android:layout_alignLeft="@+id/myshowLayout3"
            android:layout_alignStart="@+id/myshowLayout3"
            android:layout_marginTop="20sp"
            android:background="@drawable/bg_yellowboard">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/myshowtrys1">
                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/bg_user"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/myshowtimes1"
                    android:layout_toStartOf="@+id/myshowtimes1" />
                <TextView
                    android:id="@+id/myshowtimes1"
                    android:layout_width="150sp"
                    android:layout_height="100sp"
                    android:layout_marginRight="46dp"
                    android:layout_marginEnd="46dp"
                    android:text="周建人 共尝试7次"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myshowtrys2"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_below="@+id/myshowtrys1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/bg_user"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/myshowtimes2"
                    android:layout_toStartOf="@+id/myshowtimes2" />
                <TextView
                    android:id="@+id/myshowtimes2"
                    android:layout_width="150sp"
                    android:layout_height="100sp"
                    android:layout_marginRight="46dp"
                    android:layout_marginEnd="46dp"
                    android:text="孟美岐 共尝试2次"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
