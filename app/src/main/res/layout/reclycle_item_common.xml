<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="235dp">

        <android.support.v7.widget.CardView
            android:id="@+id/pic_card"
            android:layout_width="196dp"
            android:layout_height="203.3dp"
            android:layout_below="@+id/tit_show"
            android:layout_centerHorizontal="true"
            android:fitsSystemWindows="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_pic"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:id="@+id/draw_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"/>

            <RelativeLayout
                android:id="@+id/drawCirViewCon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="100"
                android:background="#1AFFFFFF"
                android:fitsSystemWindows="true"
                android:visibility="gone"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_show"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/bg_user"/>

            <ImageView
                android:id="@+id/myreceivephotolock"
                android:layout_width="26dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:background="@drawable/bt_unlock">
            </ImageView>

            <ImageView
                android:id="@+id/myreceivephotowatermark"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/btn_watermark_voice">
            </ImageView>

        </android.support.v7.widget.CardView>





        <TextView
            android:id="@+id/myreceivetipname"
            android:layout_width="125sp"
            android:layout_height="20sp"
            android:text="from 孟美岐"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/myreceivetiptime"
            android:layout_width="125sp"
            android:layout_height="20sp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:gravity="right|bottom"
            android:layout_marginRight="3dp"
            android:text="2018.06.06"
            android:textColor="#000"/>

    <TextView
        android:id="@+id/publish_date"
        android:layout_width="125sp"
        android:layout_height="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="2018.06.06"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        />

</RelativeLayout>