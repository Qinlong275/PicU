<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_11"
    tools:context=".ui.activity.BlockChoseActivity">


    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/produce_close"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_return"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_show"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="90pt"
        android:background="@drawable/text_1"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/text_show">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/voice_block"
        android:layout_width="60dp"
        android:layout_height="60dp"
            android:background="@drawable/btn_voice"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/paint_block"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_sketch"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/point_click"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_click"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/takephoto_block"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_camera"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</RelativeLayout>