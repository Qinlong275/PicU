<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_album">
    <Button
        android:id="@+id/othershowback"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:background="@drawable/btn_close"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:text="查看PicU"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignTop="@+id/othershowback"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp">
        <ImageView
            android:id="@+id/othershowphoto"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_pic"/>
        <ImageView
            android:id="@+id/othershowwatermark"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/btn_watermark_voice"
            android:layout_above="@+id/othershowLayout3"
            android:layout_alignRight="@+id/othershowphoto"
            android:layout_alignEnd="@+id/othershowphoto">
        </ImageView>
        <Button
            android:id="@+id/othershowplay"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/btn_playing_audio"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignTop="@+id/othershowwatermark"
            android:layout_alignLeft="@+id/othershowphoto"
            android:layout_alignStart="@+id/othershowphoto" />
        <RelativeLayout
            android:id="@+id/othershowLayout3"
            android:layout_width="300sp"
            android:layout_height="70sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/othershowphoto">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/bg_hint">
                <TextView
                    android:id="@+id/othershowtip"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="50sp"
                    android:text="啊哦，Ta没有留下提示哦"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:gravity="left|center"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
