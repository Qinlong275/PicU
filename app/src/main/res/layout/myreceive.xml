<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_album">
    <RelativeLayout
        android:id="@+id/myreceiveuser"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/myreceiveback"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:background="@drawable/btn_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/myreceivehead"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_user"/>
        <TextView
            android:id="@+id/myreceivename"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:text="FlowerJu"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/myreceivehead"/>
        <Button
            android:id="@+id/myreceivesetting"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/btn_settings"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignTop="@id/myreceiveback"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_below="@+id/myreceiveuser"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            app:tabMode="fixed">


        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="216dp"
            android:layout_marginTop="24.7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tab_layout"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


